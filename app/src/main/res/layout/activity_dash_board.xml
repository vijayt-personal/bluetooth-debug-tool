<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_10sdp"
    android:background="@color/black"
    tools:context=".KeyActivity">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/ota_update"
      android:layout_margin="@dimen/_10sdp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/logger"
      android:background="@drawable/bg_btn_round"
      android:minHeight="@dimen/_120sdp"
      android:minWidth="@dimen/_120sdp"

      >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:src="@drawable/ic_upgrade"
      android:id="@+id/image_update"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:id="@+id/update_text"
      app:layout_constraintStart_toStartOf="parent"
        android:textColor="#fff"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/image_update"
      android:fontFamily="sans-serif-condensed"
      android:text="OTA Update"
      />
  </androidx.constraintlayout.widget.ConstraintLayout>
  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/logger"
      app:layout_constraintStart_toEndOf="@+id/ota_update"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_margin="@dimen/_10sdp"


      app:layout_constraintTop_toTopOf="parent"
      android:background="@drawable/bg_btn_round"
      android:minHeight="@dimen/_120sdp"
      android:minWidth="@dimen/_120sdp"
      >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_log"
        android:id="@+id/image_logger"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logger_text"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#fff"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="sans-serif-condensed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_logger"

        android:text="Logger"
        />
  </androidx.constraintlayout.widget.ConstraintLayout>

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/advertiser_layout"
      android:layout_margin="@dimen/_10sdp"
      android:visibility="gone"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/ota_update"
      app:layout_constraintEnd_toStartOf="@+id/next_layout"
      android:background="@drawable/bg_btn_round"
      android:minHeight="@dimen/_120sdp"
      android:minWidth="@dimen/_120sdp"

      >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_ad"
        android:id="@+id/image_advertisement"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/advertisement_text"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_advertisement"
        android:fontFamily="sans-serif-condensed"
        android:text="Advertisement"
        />
  </androidx.constraintlayout.widget.ConstraintLayout>

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/next_layout"
      android:layout_margin="@dimen/_10sdp"
      android:visibility="gone"
      app:layout_constraintStart_toEndOf="@id/advertiser_layout"
      app:layout_constraintTop_toBottomOf="@+id/ota_update"
      app:layout_constraintEnd_toEndOf="parent"
      android:background="@drawable/bg_btn_round"
      android:minHeight="@dimen/_120sdp"
      android:minWidth="@dimen/_120sdp"

      >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_ad"
        android:id="@+id/image_next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/next_text"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_next"
        android:fontFamily="sans-serif-condensed"
        android:text="Advertisement"
        />
  </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>