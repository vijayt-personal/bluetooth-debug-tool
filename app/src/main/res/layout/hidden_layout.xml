<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<EditText
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:id="@+id/filter_name"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:layout_marginStart="@dimen/_10sdp"
    android:textColorHint="#fff"
    android:textSize="@dimen/_12sdp"
    android:textColor="#fff"
    android:hint="Device Name"
    android:padding="@dimen/_5sdp"
    app:layout_constraintEnd_toEndOf="parent"
    android:drawableEnd="@drawable/ic_baseline_search_24"
    app:layout_constraintTop_toTopOf="parent"
    />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/filter_address"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        android:drawableEnd="@drawable/ic_baseline_search_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filter_name"
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:textSize="@dimen/_12sdp"
        android:hint="Device Address"
        android:padding="@dimen/_5sdp"
        />


    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/filter_raw_data"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintTop_toBottomOf="@+id/filter_address"
        android:drawableEnd="@drawable/ic_raw"
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:hint="Raw Data"
        android:padding="@dimen/_5sdp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>